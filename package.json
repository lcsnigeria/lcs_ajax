{
  "name": "lcs_dystyle",
  "version": "1.2.1",
  "description": "LCS dySTYLE: A powerful JavaScript library for dynamic, class-based CSS styling. Apply responsive, complex, and custom styles directly through HTML class names, eliminating the need for external CSS files.",
  "main": "dist/ld.min.js",
  "module": "src/ld.js",
  "files": [
    "dist/ld.min.js"
  ],
  "scripts": {
    "build": "node obf.js && jsdoc -c jsdoc.json",
    "release": "npm run build && standard-version && git push --follow-tags && npm publish",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lcsnigeria/lcs_dystyle.git"
  },
  "keywords": [
    "css",
    "dynamic styling",
    "responsive design",
    "JavaScript",
    "class-based styling",
    "media queries",
    "pseudo-elements"
  ],
  "author": "jcfuniverse",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lcsnigeria/lcs_dystyle/issues"
  },
  "homepage": "https://github.com/lcsnigeria/lcs_dystyle#readme",
  "devDependencies": {
    "javascript-obfuscator": "^4.1.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "standard-version": "^9.5.0"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "section": "Code Style Changes"
      },
      {
        "type": "refactor",
        "section": "Refactoring"
      },
      {
        "type": "test",
        "section": "Tests"
      },
      {
        "type": "chore",
        "section": "Chores"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      }
    ],
    "commitUrlFormat": "https://github.com/lcsnigeria/lcs_dystyle/commit/{{hash}}",
    "compareUrlFormat": "https://github.com/lcsnigeria/lcs_dystyle/compare/{{previousTag}}...{{currentTag}}",
    "issueUrlFormat": "https://github.com/lcsnigeria/lcs_dystyle/issues/{{id}}"
  }
}
